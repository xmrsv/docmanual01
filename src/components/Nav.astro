---
import { getCollection } from "astro:content";

const pages = await getCollection("modulos");
const modulesPath = Astro.url.pathname.startsWith("/modulos/");
---

<style>
	nav {
		top: 0;
		position: sticky;
		display: flex;
		justify-content: space-between;
		align-items: center;
		box-shadow: 0 0.2rem 0.4rem hsla(0, 0%, 0%, 10%);
		background-color: hsl(0, 0%, 100%);
		padding: 1rem;
		flex-wrap: wrap;
	}

	nav .title {
		font-size: 1.25rem;
		font-weight: 700;
		margin-block: 0;
		text-decoration: none;
		color: inherit;
		margin-inline-start: 1rem;
	}

	nav ul {
		display: flex;
		list-style: none;
		padding-inline-start: 0;
		margin-block: 0;
	}

	nav ul li {
	}

	nav ul li a {
		max-width: fit-content;
		display: block;
		padding: 1rem;
		text-decoration: none;
		color: hsl(0, 0%, 20%);
		font-weight: 600;
		border-radius: 4rem;
	}

	nav ul li a:hover {
		background-color: hsla(0, 0%, 0%, 5%);
		color: hsl(0, 0%, 0%);
		font-weight: 600;
	}
</style>

<nav>
	<a href="/" class="title">Academia deportiva</a>
	<ul>
		{
			modulesPath &&
				pages.map((page) => (
					<li>
						<a href={page.slug}>{page.data.title}</a>
					</li>
				))
		}
	</ul>
</nav>
